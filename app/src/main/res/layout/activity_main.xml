<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.rodo.examen02.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textString"
        android:layout_below="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET Snakes And Ladders"
        android:id="@+id/buttonSyncP"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textString"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignRight="@+id/textString"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textString2"
        android:layout_alignBaseline="@+id/buttonSyncP"
        android:layout_alignBottom="@+id/buttonSyncP"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver el json "
        android:id="@+id/buttonComments"
        android:layout_alignBaseline="@+id/textString2"
        android:layout_alignBottom="@+id/textString2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll the dice"
        android:layout_marginBottom="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textString2" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST Ladders y Snakes"
        android:id="@+id/buttonPostComments"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/buttonComments"
        android:layout_alignParentStart="true" />

</RelativeLayout>
